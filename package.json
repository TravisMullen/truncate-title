{
  "name": "truncate-title",
  "version": "1.0.0",
  "description": "Custom HTMLElement for truncating text. Extends Abbr tag.",
  "main": "dist/truncate-title.js",
  "module": "dist/truncate-title.js",
  "devDependencies": {
    "@webcomponents/webcomponentsjs": "^2.1.0",
    "jsdoc-to-markdown": "^4.0.1",
    "resize-observer-polyfill": "^1.5.0",
    "rollup": "^0.64.0",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-livereload": "^0.6.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-serve": "^0.4.2",
    "snazzy": "^7.1.1",
    "standard": "^11.0.1"
  },
  "scripts": {
    "serve": "rollup --config rollup.serve.js -w",
    "build": "npm run format && npm run docs && rollup --config rollup.build.js",
    "docs": "./node_modules/.bin/jsdoc2md ./src/*.js > documentation.md",
    "test": "npm run build && node test/test.js",
    "format": "./node_modules/standard/bin/cmd.js --fix './{src,test}/**/*.{js,mjs}' --verbose | snazzy"
  },
  "repository": {
    "type" : "git",
    "url" : "git+https://github.comcast.com/tmulle204/truncate-title.git"
  },
  "files": [
    "dist"
  ]
}
